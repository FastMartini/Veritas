{
  "manifest_version": 3,
  "name": "Veritas",
  "description": "Veritas is your digital truth-compass. Stay informed, stay sharp, and let Veritas shine a light through the noise.",
  "version": "1.0.0",
  "action": {
    "default_title": "Veritas",
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
